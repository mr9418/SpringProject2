<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 네임을 정확하게 작성해야한다 -->
<mapper namespace="kr.manamana.file.dao.TodoListDAO">
	<!-- 전체개수구하기 -->
	<select id="selectCount" resultType="int">
		select count(*) from todolist
	</select>
	<!-- 1개구하기 -->
	<select id="selectByIdx" parameterType="int"
		resultType="TodoListVO">
		select * from todolist where idx=#{idx}
	</select>
	<!-- 1페이지구하기 -->
	<select id="selectList" parameterType="HashMap"
		resultType="TodoListVO">
   <![CDATA[
   select
       Q.*
   from
     (select 
         rownum rnum, R.*
    from
       (select * from todolist order by idx desc)R
   where
       rownum<=#{endNo}) Q
    where
        rnum>=#{startNo}  
   ]]>
	</select>
	<!-- 저장 -->
	<insert id="insert" parameterType="TodoListVO">
		insert into todolist values
		(todolist_idx_seq.nextval,#{name},#{status},#{title},#{contents},SYSDATE)
	</insert>
	<!-- 수정 -->
	<update id="update" parameterType="TodoListVO">
		update todolist set status=#{status}, title=#{title}, contents=#{contents},
		regDate=SYSDATE where idx=#{idx}
	</update>
	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		delete from todolist where idx=#{idx}
	</delete>

</mapper>

